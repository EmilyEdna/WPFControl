<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:eda="clr-namespace:CandyControls"
    xmlns:enum="clr-namespace:CandyControls.ControlsModel.Enums">

    <Storyboard x:Key="Open">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_TXT" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
            <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0" />
            <EasingDoubleKeyFrame KeyTime="00:00:01" Value="1" />
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_TXT" Storyboard.TargetProperty="(UIElement.Opacity)">
            <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0" />
            <EasingDoubleKeyFrame KeyTime="00:00:01" Value="1" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <Storyboard x:Key="Close">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_TXT" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
            <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1" />
            <EasingDoubleKeyFrame KeyTime="00:00:01" Value="0" />
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_TXT" Storyboard.TargetProperty="(UIElement.Opacity)">
            <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1" />
            <EasingDoubleKeyFrame KeyTime="00:00:01" Value="0" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

