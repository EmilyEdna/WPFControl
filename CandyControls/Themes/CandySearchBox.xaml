                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="OpenAnime" Storyboard="{StaticResource Open}" />
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard x:Name="CloseAnime" Storyboard="{StaticResource Close}" />
